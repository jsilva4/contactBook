= form_for @nickname do |f|
  - if @nickname.errors.any?
    #error_explanation
      %h2= "#{pluralize(@nickname.errors.count, "error")} prohibited this nickname from being saved:"
      %ul
        - @nickname.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :nickname
    = f.text_field :nickname
  .actions
    = f.submit 'Save'
